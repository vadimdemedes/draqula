{
	"include": ["src"],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"importHelpers": false,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"*": ["src/*", "node_modules/*"]
		},
		"jsx": "react",
		"esModuleInterop": true
	}
}
